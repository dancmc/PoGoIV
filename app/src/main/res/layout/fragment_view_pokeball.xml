<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="8dp"
    tools:context=".MainActivity">


    <LinearLayout
        android:id="@+id/pokeball_view_toppart"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <com.example.daniel.material.RatioLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.3"
            app:ratio="1.2">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <com.example.daniel.material.RatioLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="8dp"
                    app:ratio="1">

                    <ImageView
                        android:id="@+id/pokeball_view_image"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/circle_background"
                        android:scaleType="centerCrop" />
                </com.example.daniel.material.RatioLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"><TextView
                        android:id="@+id/pokeball_view_nickname"
                        android:layout_weight="8"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:background="@drawable/shape_rectangle_clear"

                        android:gravity="center"
                        android:text="test"
                        android:textColor="@android:color/darker_gray"
                        android:textSize="18sp" /> <ImageButton
                        android:id="@+id/pokeball_view_edit_nickname_button"
                        android:layout_width="0dp"
                        android:layout_weight="2"
                        android:scaleType="centerCrop"
                        android:src="@drawable/ic_create_black_24px"
                        android:background="@drawable/shape_rectangle_clear"
                        android:layout_height="match_parent" /></LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"><EditText
                        android:id="@+id/pokeball_view_nickname_edittext"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="8"
                        android:background="@drawable/shape_rectangle_clear"
                        android:gravity="center"
                        android:textColor="@android:color/darker_gray"
                        android:textSize="18sp" />



                        <ImageButton
                            android:id="@+id/pokeball_view_save_nickname_button"
                            android:layout_width="0dp"
                            android:layout_weight="2"
                            android:layout_height="match_parent"
                            android:src="@drawable/ic_done_black_24px"
                            android:scaleType="centerCrop"
                            android:background="@drawable/shape_rectangle_clear"
                            /></LinearLayout>





                </RelativeLayout>
            </LinearLayout>
        </com.example.daniel.material.RatioLayout>

        <com.example.daniel.material.RatioLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            app:ratio="1.2">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <com.example.daniel.material.RatioLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="8dp"
                    app:ratio="1">

                    <TextView
                        android:id="@+id/pokeball_view_IV_percent"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/circle_background"
                        android:gravity="center"
                        android:text="89%"
                        android:textSize="40sp" />
                </com.example.daniel.material.RatioLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_alignParentBottom="true"
                    android:layout_below="@+id/photo"
                    android:gravity="center"
                    android:text="Average IV%"
                    android:textColor="@android:color/darker_gray"
                    android:textSize="14sp" />
            </LinearLayout>
        </com.example.daniel.material.RatioLayout>

        <com.example.daniel.material.RatioLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            app:ratio="1.2">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <com.example.daniel.material.RatioLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="8dp"
                    app:ratio="1">

                    <TextView
                        android:id="@+id/pokeball_view_CP_percent"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/circle_background"
                        android:gravity="center"
                        android:text="89%"
                        android:textSize="40sp" />
                </com.example.daniel.material.RatioLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_alignParentBottom="true"
                    android:layout_below="@+id/photo"
                    android:gravity="center"
                    android:text="Average CP%"
                    android:textColor="@android:color/darker_gray"
                    android:textSize="14sp" />
            </LinearLayout>
        </com.example.daniel.material.RatioLayout>
    </LinearLayout>


    <TextView
        android:id="@+id/pokeball_view_summary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/pokeball_view_toppart"
        android:minHeight="40dp" />

    <ExpandableListView
        android:id="@+id/pokeball_view_expandableLV"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/pokeball_view_summary"
        android:headerDividersEnabled="false"
        android:indicatorLeft="300dp"
        android:indicatorRight="420dp" />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/add_activity_fab"
        android:layout_width="@dimen/fab_size"
        android:layout_height="@dimen/fab_size"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_margin="16dp"
        android:src="@drawable/ic_add_white_24px" />
</RelativeLayout>
