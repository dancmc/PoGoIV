<com.dancmc.pogoiv.views.FrameLayoutIntercept xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/overlay_frame_layout_viewpokeball"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clickable="true"
    android:focusable="true"
    android:focusableInTouchMode="true">

    <LinearLayout
        android:id="@+id/overlay_insertpoint_viewpokeball"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/white"
        android:orientation="vertical">

        <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            xmlns:tools="http://schemas.android.com/tools"
            android:id="@+id/overlay_view_pokeball_main_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@android:color/white"
            android:orientation="vertical"
            tools:context=".activities.MainActivity">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:padding="8dp">

                    <LinearLayout
                        android:id="@+id/overlay_pokeball_view_toppart"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <com.example.daniel.material.RatioLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1.3"
                            app:ratio="1.2">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="vertical">

                                <com.example.daniel.material.RatioLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:padding="8dp"
                                    app:ratio="1">

                                    <ImageView
                                        android:id="@+id/overlay_pokeball_view_image"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:background="@drawable/circle_background"
                                        android:scaleType="centerCrop" />
                                </com.example.daniel.material.RatioLayout>

                                <RelativeLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent">

                                    <TextView
                                        android:id="@+id/overlay_pokeball_view_nickname"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:background="@drawable/shape_rectangle_clear"
                                        android:gravity="center"
                                        android:text="test"
                                        android:textColor="@android:color/darker_gray"
                                        android:textSize="18sp" />

                                    <EditText
                                        android:id="@+id/overlay_pokeball_view_nickname_edittext"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:background="@drawable/shape_rectangle_clear"
                                        android:focusable="true"
                                        android:focusableInTouchMode="true"
                                        android:gravity="center"
                                        android:imeOptions="actionDone"
                                        android:inputType="textCapWords"
                                        android:maxLines="1"
                                        android:textColor="@android:color/darker_gray"
                                        android:textSize="18sp" />


                                </RelativeLayout>
                            </LinearLayout>
                        </com.example.daniel.material.RatioLayout>

                        <com.example.daniel.material.RatioLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            app:ratio="1.3">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="vertical">

                                <com.example.daniel.material.RatioLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:padding="8dp"
                                    app:ratio="1">

                                    <TextView
                                        android:id="@+id/overlay_pokeball_view_IV_percent"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:background="@drawable/circle_background"
                                        android:gravity="center"
                                        android:text="89%"
                                        android:textSize="40sp" />
                                </com.example.daniel.material.RatioLayout>

                                <TextView
                                    android:id="@+id/overlay_pokeball_view_IV_percent_desc"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentBottom="true"
                                    android:layout_below="@+id/photo"
                                    android:gravity="center"
                                    android:text="Average IV%"
                                    android:textSize="14sp" />
                            </LinearLayout>
                        </com.example.daniel.material.RatioLayout>

                        <com.example.daniel.material.RatioLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            app:ratio="1.3">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="vertical">

                                <com.example.daniel.material.RatioLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:padding="8dp"
                                    app:ratio="1">

                                    <TextView
                                        android:id="@+id/overlay_pokeball_view_CP_percent"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:background="@drawable/circle_background"
                                        android:gravity="center"
                                        android:text="89%"
                                        android:textSize="40sp" />
                                </com.example.daniel.material.RatioLayout>

                                <TextView
                                    android:id="@+id/overlay_pokeball_view_CP_percent_desc"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentBottom="true"
                                    android:layout_below="@+id/photo"
                                    android:gravity="center"
                                    android:text="Average CP%"
                                    android:textSize="14sp" />
                            </LinearLayout>
                        </com.example.daniel.material.RatioLayout>
                    </LinearLayout>


                    <TextView
                        android:id="@+id/overlay_pokeball_view_summary"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:gravity="center"
                        android:text="Test"
                        android:textSize="16sp" />

                    <Button
                        android:id="@+id/overlay_pokeball_view_comparison"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_margin="8dp"
                        android:text="COMBINATION DETAILS"
                        android:textSize="16sp"
                        android:theme="@style/AppTheme.BlueButton" />

                    <android.support.v7.widget.RecyclerView
                        android:id="@+id/overlay_view_pokeball_recyclerview"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" />
                </LinearLayout>
            </LinearLayout>


            <android.support.design.widget.FloatingActionButton
                android:id="@+id/overlay_add_to_existing_pokeball_fab"
                android:layout_width="@dimen/fab_size"
                android:layout_height="@dimen/fab_size"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:layout_margin="16dp"
                android:elevation="8dp"
                android:focusable="true"
                android:src="@drawable/ic_add_white_24px" />
        </RelativeLayout>
    </LinearLayout>

</com.dancmc.pogoiv.views.FrameLayoutIntercept>