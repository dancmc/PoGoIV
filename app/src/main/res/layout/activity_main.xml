<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.dancmc.pogoiv.MainActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fillViewport="true"
        android:scrollbars="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <AutoCompleteTextView
                android:id="@+id/enter_pokemon_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:completionThreshold="1"
                android:hint="Enter Pokemon Name"
                android:imeOptions="actionNext"
                android:inputType="textAutoComplete"
                android:selectAllOnFocus="true"
                android:textSize="12dp" />

            <EditText
                android:id="@+id/enter_cp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Enter CP"
                android:inputType="number"
                android:selectAllOnFocus="true"
                android:textSize="12dp" />

            <EditText
                android:id="@+id/enter_hp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Enter HP"
                android:inputType="number"
                android:selectAllOnFocus="true"
                android:textSize="12dp" />


            <EditText
                android:id="@+id/enter_stardust"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Enter Stardust needed for powerup"
                android:inputType="number"
                android:selectAllOnFocus="true"
                android:textSize="12dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:orientation="horizontal">

                <CheckBox
                    android:id="@+id/checkbox_powerup"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Has not been powered up (blank if unsure)"
                    android:textStyle="bold" />

            </LinearLayout>

            <Button
                android:id="@+id/calculate_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Calculate!" />

            <Button
                android:id="@+id/compare_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Compare!" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/first_pokemon"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="50"
                    android:text="1st : None"
                    android:textSize="12dp" />

                <Button
                    android:id="@+id/second_pokemon"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="50"
                    android:text="2nd : None"
                    android:textSize="12dp" />
            </LinearLayout>


            <TextView
                android:id="@+id/output"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </LinearLayout>
    </ScrollView>


</LinearLayout>
